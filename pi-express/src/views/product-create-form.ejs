<!DOCTYPE html>
<html>
<!-- Include Head -->
<%- include('includes/head', { title: 'Incluir Produto' }) %>

	<body>
		<!-- Header -->
		<%- include('includes/header') %>
		<!-- /Header -->

			<div class="container products-wrapper">
				<div class="row">
					<div class="col-12">
						<h2 class="products-title">Formulário de Inclusão de Produto</h2>
					</div>
				</div>
				<div class="col-12">
					<form action="/product" method="POST">
						<div class="row product-detail">
							<div class="col-12 col-md-6">
								<label for="name" class="form-label">Nome:</label>
								<input type="text" id="name" name="name" placeholder="Informe o nome do produto" class="form-input">
							</div>
							<div class="col-12 col-md-6">
								<label for="price" class="form-label">Preço:</label>
								<input type="number" id="price" name="price" placeholder="Informe o preço do produto" class="form-input">
							</div>
							<div class="col-12 col-md-6">
								<label for="discount" class="form-label">Desconto:</label>
								<input type="number" id="discount" name="discount" placeholder="Informe o desconto do produto" class="form-input">
							</div>
							<div class="col-12">
								<label for="description" class="form-label">Descrição:</label>
								<textarea name="description" id="description" class="form-input"></textarea>
							</div>
							<div class="col-12">
								<button type="submit" class="buy-now-button">Salvar</button>
							</div>
						</div>
					</form>
				</div>
			</div>

			<!-- footer -->
			<%- include('includes/footer') %>
			<!-- /footer -->
	</body>

</html>